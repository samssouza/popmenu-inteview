= form_for @menus_item do |f|
  - if @menus_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@menus_item.errors.count, "error")} prohibited this menus_item from being saved:"
      %ul
        - @menus_item.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :item
    = f.text_field :item
  .field
    = f.label :menu
    = f.text_field :menu
  .actions
    = f.submit 'Save'
